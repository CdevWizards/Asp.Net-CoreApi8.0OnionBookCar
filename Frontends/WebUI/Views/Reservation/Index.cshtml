@model UdemyCarBook.Dto.LocationDtos.ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout ="~/Views/UILayout/Index.cshtml";
}

   <div class="col-md-8 block-9 mb-md-5">
            <form action="#" class="bg-light p-5 contact-form">
              <div class="form-group">
                <input type="text" class="form-control" readonly placeholder="Almak İstediğiniz Araba">
              </div>
              <div class="form-group">
                <label>Adınız</label>
                <input type="text" class="form-control" placeholder="Adınız">
              </div>
              <div class="form-group">
                <label>Soyadınız</label>
                <input type="text" class="form-control" placeholder="Soyadınız">
              </div>
              <div class="form-group">
                <label>Mail Adresiniz</label>
                <input type="text" class="form-control" placeholder="Mail Adresiniz">
              </div>
               <div class="form-group">
                <label>Telefon Numaranız</label>
                <input type="text" class="form-control" placeholder="Telefon Numaranız">
              </div>
              <div class="form-group">
                <label> Almak İstediğiniz Lokasyon</label>
                @*<input type="text" class="form-control" placeholder="Almak İstediğiniz Lokasyon ">*@
                @Html.DropDownListFor(x=>x.LocationID, (List<SelectListItem>)ViewBag.v,new {@class = "form-control",})
              </div>
              <div class="form-group">
                <label> Teslim Etmek  İstediğiniz Lokasyon</label>
               @* <input type="text" class="form-control" placeholder="Teslim Etmek İstediğiniz Lokasyon">*@
                @Html.DropDownListFor(x=>x.LocationID, (List<SelectListItem>)ViewBag.v,new {@class = "form-control",})
              </div>
              <div class="form-group">
                <label> Yaşınız </label>
                <input type="text" class="form-control" placeholder="Yaşınız">
              </div>
              <div class="form-group">
                <label> Ehliyet Yılınız </label>
                <input type="text" class="form-control" placeholder="Ehliyet Yılınız">
              </div>
              <div class="form-group">
                <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Rezervasyon Tamamla" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
          </div>