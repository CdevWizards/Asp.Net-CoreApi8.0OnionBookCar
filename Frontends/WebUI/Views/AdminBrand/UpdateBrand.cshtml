@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout ="~/Views/AdminLayout/Index.cshtml";
}

   <div class="page-content">
                <div class="container-fluid">
                     <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                    
                                    <h4 class="card-title"> Araç Marka Güncelleme Sayfası</h4>
                                    <p class="card-subtitle mb-4">Araç İle ilgili Özellikleri aşağıdaki kutucuğa girebilirsiniz. Veri Girişlerinden
                                        sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz
                                    </p>
                                    <form method="post">
                                        <div class="form-group">
                                            <input type="hidden" asp-for="brandID"/>
                                            <label for="exampleInputName">Özellik Adı</label>
                                             <input type="text" class="form-control" asp-for="name" placeholder="Özellik">      
                                        </div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                                    </form>
                                </div> <!-- end card-body-->
                            </div>