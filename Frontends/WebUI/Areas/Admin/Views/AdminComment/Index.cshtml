@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">ßßß
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi mb-0 BlogID: @ViewBag.v </h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla ilgili o bloğa yapılmış olan yorum listesini bu sayfadan görebilirsiniz.
                            Yeni blog ekleme işlemi admin tarafından yapılmamaktadır. 
                            Eğer blog ekleme işlemi yapmak isterseniz sisteme yazar olarak giriş yapmanız gerekmektedir. 
                            Her yazar sadece kendi bloglarını düzenleyebilir. Bunun için uygulamada Login/WriterLogin sayfası üzerinden giriş yapabilirsiniz.
                        </p>
                        @foreach(var item in Model)
                        {
                            count++;
                              <div class="col-md-4">
                                <div class="card">
                                    <h5 class="card-header">Yorum @count </h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">@item.Description</p>
                                        <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    using UdemyCarBook.Dto.CommentDtos;
