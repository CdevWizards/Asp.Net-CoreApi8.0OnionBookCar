@model UpdatePricingDto

@{
    ViewData["Title"] = "UpdatePricingDto";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ödeme Periyodu Düzenleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Pricing alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması adına yeni bir Pricing girişi yaptıktan sonra önceki Pricing alanını silin, sadece 1 tane Pricing verisi kalmalıdır.</p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingID"/>
                            
                            <div class="form-group">
                                <label for="exampleInputName">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Başlığı Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Pricing Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
